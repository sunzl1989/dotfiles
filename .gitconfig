[core]
  excludesfile = ~/.gitignore_global
[web]
  browser = open
[alias]
  s    = status
  c    = !git add . && git commit -a && git push
  fuck = !git commit --amend && git push --force
  br   = branch
  co   = checkout
  d    = diff
  l    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue(%cr)%Cgreen[%cN]%Creset' --abbrev-commit --date=relative
  who  = shortlog -s -n --
  cleanup = !git clean -fXd
  cleanbr = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[merge]
  log = true
  tool = vimdiff
[user]
  name = Davide D'Agostino
  email = daddye@uber.com
[push]
  default = simple
[gist]
  private = true
  browse = false
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[apply]
  ignorewhitespace = change
[github]
  user = daddye
[ghi]
  token = !security find-internet-password -a daddye -s github.com -l 'ghi token' -w
[credential]
  helper = osxkeychain
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[branch]
  autosetuprebase = always
[rerere]
  enabled = true
